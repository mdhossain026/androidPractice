<resources xmlns:android="http://schemas.android.com/apk/res/android">

    
      <style name="Theme.MyAppTheme"  parent="android:Theme.Holo.Light.DarkActionBar">
            <item name="android:actionBarStyle">@style/Theme.MyAppTheme.ActionBar</item>
       		
     </style>

    <style name="Theme.MyAppTheme.ActionBar" parent="@android:style/Widget.Holo.ActionBar">
	    <item name="android:background">#1e5799</item>    
	    <item name="android:height">40dip</item>
	      <item name="android:textColor">#000</item>
	    <item name="android:titleTextStyle">@style/Theme.MyAppTheme.ActionBar.TitleTextStyle</item>
		
	</style>  
	
    <!-- style for the action bar tab text -->
    <style name="Theme.MyAppTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo">
        
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    
   <style name="customTabWidget"  >
          
       		<item name="android:tabWidgetStyle">@style/LightTabWidget</item>
   </style>
	
    <style name="LightTabWidget">
        <item name="android:background">@color/Red</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">5dp</item>
        
        
    </style>
    
     <style name="TextView">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        
    </style>
    


    <style name="EditText">
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/button_corner</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:padding">5dp</item>        
    </style>
      
    <style name="lbl_header">
        <item name="android:textColor">#008000</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
      
    </style>
    
</resources>